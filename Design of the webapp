    <script>
        // Login functionality
        document.getElementById('login-btn').addEventListener('click', function() {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            if(email && password) {
                // Hide login screen
                document.getElementById('login-screen').style.display = 'none';
                
                // Show app interface
                document.getElementById('app-container').style.display = 'block';
                
                // Create particles
                createParticles();
            } else {
                alert('Please enter both email and password');
            }
        });
        
        // Create interactive particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 30;
            
            for(let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // Random size (3px to 8px)
                const size = Math.random() * 5 + 3;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                // Random position
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;
                
                // Random animation
                const duration = Math.random() * 20 + 10;
                const delay = Math.random() * 5;
                particle.style.animation = `float ${duration}s ease-in-out ${delay}s infinite`;
                
                particlesContainer.appendChild(particle);
                
                // Add animation
                animateParticle(particle);
            }
        }
        
        // Animate particles
        function animateParticle(particle) {
            const startX = parseFloat(particle.style.left);
            const startY = parseFloat(particle.style.top);
            
            // Random end position (within 20% of start)
            const endX = startX + (Math.random() * 40 - 20);
            const endY = startY + (Math.random() * 40 - 20);
            
            // Animate
            particle.animate([
                { transform: `translate(0, 0)` },
                { transform: `translate(${endX - startX}%, ${endY - startY}%)` }
            ], {
                duration: Math.random() * 10000 + 5000,
                iterations: Infinity,
                direction: 'alternate',
                easing: 'ease-in-out'
            });
        }
        
        // Interactive AI features
        document.getElementById('ask-ai').addEventListener('click', function() {
            const aiCards = document.querySelectorAll('.dashboard-card');
            const aiResponse = document.querySelector('.ai-response p');
            
            // Visual feedback
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Thinking...';
            
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-comment-alt"></i> Ask AI';
                
                // Show response
                aiResponse.innerHTML = '<strong>Pro Tip:</strong> I noticed you have a meeting with Alex at 3PM. I found an available slot tomorrow if you need to reschedule to prepare better.';
                
                // Pulse animation
                aiCards[0].animate([
                    { transform: 'scale(1)' },
                    { transform: 'scale(1.02)' },
                    { transform: 'scale(1)' }
                ], {
                    duration: 500,
                    iterations: 1
                });
            }, 1500);
        });
        
        document.getElementById('optimize-day').addEventListener('click', function() {
            const statCards = document.querySelectorAll('.stat-card');
            const statValue = document.querySelector('.stat-value');
            const scheduleItem = document.querySelectorAll('.schedule-item div');
            
            // Visual feedback
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Optimizing...';
            
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-magic"></i> Optimize Day';
                
                // Update stats
                statValue.textContent = '92%';
                
                // Show success
                const successIcon = scheduleItem[0].querySelector('i');
                successIcon.style.color = 'var(--success)';
                
                // Animation
                statCards[0].animate([
                    { backgroundColor: 'rgba(19, 15, 64, 0.7)' },
                    { backgroundColor: 'rgba(80, 250, 123, 0.2)' },
                    { backgroundColor: 'rgba(19, 15, 64, 0.7)' }
                ], {
                    duration: 1000,
                    iterations: 1
                });
                
                // Show notification
                alert('Your day has been optimized! I moved your gym session to 7PM and blocked focus time before your project deadline.');
            }, 2000);
        });
        
        // Nav item interaction
        const navItems = document.querySelectorAll('.nav-item');
        navItems.forEach(item => {
            item.addEventListener('click', function() {
                navItems.forEach(nav => nav.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>
